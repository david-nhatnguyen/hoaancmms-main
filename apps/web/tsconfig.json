{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "vite/client", 
      "jest",
      "@testing-library/jest-dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src", "vite.config.ts", "tailwind.config.ts"]
}