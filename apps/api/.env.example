PORT=3000
NODE_ENV=development

# Database Connection (matches docker-compose.yml)
DATABASE_URL="postgresql://admin:password123@localhost:5432/cmms"

# JWT Configuration
JWT_SECRET="change-this-to-a-secure-random-string"
JWT_EXPIRATION="1d"

# Redis (for queue processing - BullMQ)
REDIS_HOST="localhost"
REDIS_PORT=6379

# File Storage
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# Optional: AWS S3 (if using S3 storage instead of local)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_S3_BUCKET=""
# AWS_REGION="ap-southeast-1"